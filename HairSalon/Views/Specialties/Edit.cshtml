@{
	ViewData["Title"] = "Welcome";
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="text-center">
	<h1 class="display-3">Welcome @ViewBag.StylistName</h1>
	<h4 class="text-danger">@ViewBag.message</h4>

	<h3>Specialties</h3>
	<a class="btn-success btn" asp-controller="specialties" asp-action="new">Add new Specialty</a>
	<div class="container clientBG rounded">
		<hr>
		@if (ViewBag.SpecialtyList != null)
		{
			@foreach (Specialty item in ViewBag.SpecialtyList)
			{
				@if (item.Id == ViewBag.SpecialtyEdit.Id)
				{
					<form asp-controller="specialties" asp-action="update" method="post">

						<input type="hidden" name="specialtyId" value="@item.Id">

						<div class="row justify-content-center align-items-center bg-warning">

							<div class="col-md-4 text-left">
								<div class="form-group">
									<label for="phone_number">Specialty</label>
									<input type="text" class="form-control" name="specialty" value="@item.Name" placeholder="@item.Name" required>
								</div>
							</div>

							<div class="col-md-2 text-left">
								<button class="btn-success btn" type="submit"> Done </button>
								<a class="btn-danger btn" asp-controller="specialties" asp-action="destroy" asp-route-specialtyId="@item.Id"> Remove </a>
							</div>
						</div>
					</form>
				}
				else
				{
					<div class="row justify-content-center align-items-center">
						<div class="col-md-4 text-left">
							<p><b>Specialty</b>: @item.Name</p>
						</div>

						<div class="col-md-2 text-left">
							<a class="btn-primary btn" asp-controller="specialties" asp-action="edit" asp-route-specialtyId="@item.Id"> Edit </a>
							<a class="btn-danger btn" asp-controller="specialties" asp-action="destroy" asp-route-specialtyId="@item.Id"> Remove </a>
						</div>
					</div>
				}
				<hr>
			}
		}
	</div>
	<a class="btn-danger btn" asp-controller="specialties" asp-action="destroyAll"> Clear All </a>
</div>
