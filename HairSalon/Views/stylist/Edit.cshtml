@{
    ViewData["Title"] = "Edit Stylist";
}

<link rel="stylesheet" href="~/css/index.css" />

<div class="text-center">
	<h1 class="display-3">Edit @ViewBag.EditUser.Name</h1>
	<h4 class="text-danger">@ViewBag.message</h4>

	<form asp-controller="Stylist" asp-action="Update" method="post">
		
		<input type="hidden" name="userId" value="@ViewBag.EditUser.Id">
		
		<div class="form-group">
			<label for="userId">User Name</label>
			<input type="text" class="form-control" name="login_name" placeholder="Stylist">
		</div>

		<div class="form-group">
			<label for="userId">Stylist Name</label>
			<input type="text" class="form-control" name="name" placeholder="Krillin">
		</div>

		<div class="form-group">
			<label for="userPassword">Password</label>
			<input type="password" class="form-control" name="password" placeholder="Password">
		</div>

		<button class="btn-primary btn" type="submit">Create</button>
	</form>
</div>
